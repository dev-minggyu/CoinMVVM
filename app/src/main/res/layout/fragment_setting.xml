<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:context=".ui.fragment.setting.SettingFragment">

        <TextView
            android:id="@+id/tv_title_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_setting_theme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line_ui"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/color_text"
            app:layout_constraintTop_toBottomOf="@id/tv_title_theme" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:checkedButton="@id/rb_theme_system"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_ui">

            <RadioButton
                android:id="@+id/rb_theme_system"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_theme_system"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/rb_theme_light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_theme_light"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/rb_theme_dark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_theme_dark"
                android:textAlignment="center" />

        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>